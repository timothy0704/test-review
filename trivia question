        Console.WriteLine("1. Timothy Kim");
        Console.WriteLine("2. Justin Trudeau");
        Console.WriteLine("3. George Washington");
        Console.WriteLine("4. Sir John Alexander Macdonald");

        Console.WriteLine("Enter the correct choice");

        int opt = Convert.ToInt32(Console.ReadLine());

        if (opt == 3)
        {
            Console.WriteLine("Correct");
        }
      else
      {
                Console.WriteLine("Incorrect");
        }

Console.WriteLine("where is canada");

        Console.WriteLine("1. North America");
