        Console.WriteLine("3. Europe");
        Console.WriteLine("4. Africa");

        Console.WriteLine("Enter the correct choice");

        int apt = Convert.ToInt32(Console.ReadLine());

        if (apt == 1)
        {
            Console.WriteLine("Correct");
        }
      else
      {
                Console.WriteLine("Incorrect");
        }

      Console.WriteLine("What year did the Berlin wall fall?");

        Console.WriteLine("1. 2022");
        Console.WriteLine("2. 1989");
        Console.WriteLine("3. 1897");
        Console.WriteLine("4. 1998");

        Console.WriteLine("Enter the correct choice");

        int bpt = Convert.ToInt32(Console.ReadLine());

        if (bpt == 2)
        {
            Console.WriteLine("Correct");
        }
      else
      {
                Console.WriteLine("Incorrect");
        }
      Console.WriteLine("When did the ww1 start?");

        Console.WriteLine("1. 2022");
